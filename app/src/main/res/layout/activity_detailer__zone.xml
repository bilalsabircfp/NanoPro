<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="org.bilal.dzone.nano_productions.Personal_Zone.Detailer.Detailer_Zone">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo_new" />

        <ImageView
            android:tint="#000"
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="23dp"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp" />


    </RelativeLayout>





    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:tint="#000"
            android:layout_marginStart="15dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/detailer_details"
            />


        <TextView
            android:textColor="#000"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="15dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Account Creator :"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAllCaps="true"
            />

    </LinearLayout>




    <LinearLayout
        android:padding="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/dark_background"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">



            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_gravity="center"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/car"
                app:civ_border_width="1dp"
                app:civ_border_color="#b4b4b4"/>



        </LinearLayout>





        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">





            <TextView
                android:id="@+id/name"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="..."
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:tint="#000"
                    android:layout_gravity="start|center_vertical"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:src="@drawable/email"/>




                <TextView
                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical"
                    android:id="@+id/address"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



            </LinearLayout>





            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:tint="#000"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:src="@drawable/call_small"/>




                <TextView
                    android:textColor="#000"
                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical"
                    android:id="@+id/number"
                    android:textSize="14sp"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />




            </LinearLayout>




        </LinearLayout>





        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <Button
                android:layout_gravity="center"
                android:id="@+id/call"
                android:text="Call"
                android:textSize="10sp"
                android:background="@drawable/button_background_red"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />




        </LinearLayout>







    </LinearLayout>







    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:gravity="center_vertical"
            android:text="Subscription details :"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_background"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/subscriptions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="2"
            android:hint=""
            android:padding="15dp"
            android:singleLine="false"
            android:textColor="#000"
            android:textColorHint="#8f8f8f"
            android:textSize="14sp" />


        <Button
            android:id="@+id/enlarge"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_red"
            android:text="Enlarge"
            android:textAllCaps="false" />


    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:gravity="center_vertical"
            android:text="Search :"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>



    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:padding="10dp"
        android:layout_below="@+id/header"
        android:background="@drawable/search_box"
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <EditText
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:maxLines="1"
            android:background="@android:color/transparent"
            android:layout_toLeftOf="@+id/btnfilter"
            android:id="@+id/et_search"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColorHint="#a1a1a1"
            android:textColor="#000"
            android:hint="Type Something to Search!" />



        <ImageButton
            android:id="@+id/btnfilter"
            android:layout_marginEnd="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="14dp"
            android:backgroundTint="#000"
            android:background="@drawable/settings" />




    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">


        <TextView
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:gravity="center_vertical"
            android:text="Applications done :"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/swiperefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">


            <ListView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:divider="@android:color/transparent" />


        </android.support.v4.widget.SwipeRefreshLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            app:backgroundTint="#ee2b4c"
            app:fabSize="normal"
            app:rippleColor="#EE3454"
            app:srcCompat="@drawable/ic_add" />
    </FrameLayout>


</LinearLayout>