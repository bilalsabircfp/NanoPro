<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fadingEdgeLength="0dp"
    android:fillViewport="true"
    android:focusable="false"
    android:overScrollMode="never"
    android:scrollbars="none">



<LinearLayout
    android:paddingBottom="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo_new" />

        <ImageView
            android:tint="#000"
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="23dp"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp" />


    </RelativeLayout>


    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <ImageView
        android:layout_marginStart="15dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/user"
        />


    <TextView
        android:layout_marginStart="8dp"
        android:layout_marginEnd="15dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Personal Zone :"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000"
        android:textAllCaps="true"
        />

    </LinearLayout>



    <TextView
        android:focusable="true"
        android:singleLine="false"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/button_background"
        android:id="@+id/pzone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:padding="10dp"
        android:textColorHint="#000"
        android:hint="Login To See Details!"
        android:textColor="#000"
        />



    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_marginStart="15dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/product"
            />


        <TextView
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Products :"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAllCaps="true"
            />


    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_height="match_parent"
            android:id="@+id/r_cars"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent">



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/cover2"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:padding="0dp"
                android:layout_margin="0dp"
                />





            <TextView
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:background="#8e000000"
                android:layout_alignParentBottom="true"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_below="@id/car"
                android:text="2019 product line"
                android:textAllCaps="true"
                android:id="@+id/cars_txt"
                android:layout_width="match_parent"
                android:layout_height="30dp" />


        </RelativeLayout>



    </LinearLayout>



    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_marginStart="15dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/gallery"
            />


        <TextView
            android:layout_marginStart="8dp"
            android:layout_marginEnd="15dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Gallery :"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAllCaps="true"
            />


    </LinearLayout>



    <LinearLayout
        android:id="@+id/img1"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_height="match_parent"
            android:id="@+id/r_gallery"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent">



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/cover1"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:padding="0dp"
                android:layout_margin="0dp"
                />





            <TextView
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:background="#8e000000"
                android:layout_alignParentBottom="true"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_below="@id/car"
                android:text="Gallery"
                android:textAllCaps="true"
                android:layout_width="match_parent"
                android:layout_height="30dp" />


        </RelativeLayout>



    </LinearLayout>







    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <ImageView
            android:tint="#000"
            android:layout_marginStart="15dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/newsfeed"
            />


        <TextView
            android:textColor="#000"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="15dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="news feed :"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAllCaps="true"
            />



    </LinearLayout>




    <org.bilal.dzone.nano_productions.Personal_Zone.NonScrollListView
        android:layout_marginTop="10dp"
        android:focusable="false"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:id="@+id/lv_nonscroll_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </org.bilal.dzone.nano_productions.Personal_Zone.NonScrollListView>
    
    




    </LinearLayout>


</ScrollView>