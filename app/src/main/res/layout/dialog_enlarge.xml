<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="280dp"
    android:background="#fff"
    android:layout_gravity="center"
    android:layout_height="wrap_content">



    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">





        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo_new"/>




        <TextView
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textAlignment="center"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="#000"
            android:text="GOOD JOB!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <TextView
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:textAlignment="center"
            android:gravity="center"
            android:text="You have reached your subscription limit."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <TextView
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Please contact NANOPRO Headquarters or your local importer to purchase more subscriptions."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />




        <TextView
            android:id="@+id/link1"
            android:textColor="#2196F3"
            android:layout_marginTop="10dp"
            android:textSize="10sp"
            android:textAlignment="center"
            android:gravity="center"
            android:text="@string/link1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <TextView
            android:id="@+id/link2"
            android:textColor="#2196F3"
            android:layout_marginTop="5dp"
            android:textSize="10sp"
            android:textAlignment="center"
            android:gravity="center"
            android:text="@string/link2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />




        <TextView
            android:id="@+id/link3"
            android:textColor="#2196F3"
            android:layout_marginTop="5dp"
            android:textSize="10sp"
            android:textAlignment="center"
            android:gravity="center"
            android:text="@string/link3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />





        <Button
            android:background="@drawable/button_background_red"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/btn"
            android:minWidth="150dp"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:text="Close"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="35dp" />


    </LinearLayout>



</LinearLayout>
