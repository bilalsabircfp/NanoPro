<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context="org.bilal.dzone.nano_productions.Personal_Zone.Detailer.Add_Customer">



    <ScrollView
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="23dp"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp" />


    </RelativeLayout>





    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">




        <Button
            android:text="Coating"
            android:background="@drawable/tab_button_dark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>




        <Button
            android:id="@+id/maint"
            android:text="Maintenance"
            android:background="@drawable/tab_button_light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>



    </LinearLayout>




    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_marginStart="15dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/sheild"
            />


        <TextView
            android:layout_marginStart="8dp"
            android:layout_marginEnd="15dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Warranty Number :"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAllCaps="true"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/dark_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <EditText
        android:editable="false"
        android:singleLine="true"
        android:background="@android:color/transparent"
        android:id="@+id/warranty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:padding="15dp"
        android:textColorHint="#eae9e9"
        android:hint="Enter Warranty Number"
        android:textColor="#fff"
        />


    </LinearLayout>




    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_marginStart="15dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/user"
            />


        <TextView
            android:layout_marginStart="8dp"
            android:layout_marginEnd="15dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Customer name :"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAllCaps="true"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/dark_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <EditText
            android:singleLine="true"
            android:background="@android:color/transparent"
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:padding="15dp"
            android:textColorHint="#eae9e9"
            android:hint="Enter Customer Name"
            android:textColor="#fff"
            />


    </LinearLayout>





    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_marginStart="15dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/call"
            />


        <TextView
            android:layout_marginStart="8dp"
            android:layout_marginEnd="1dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Customer Phone Number :"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAllCaps="true"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/dark_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <EditText
            android:singleLine="true"
            android:background="@android:color/transparent"
            android:id="@+id/number"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:padding="15dp"
            android:textColorHint="#eae9e9"
            android:hint="Enter Phone number"
            android:textColor="#fff"
            />


    </LinearLayout>






    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_marginStart="15dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/calander"
            />


        <TextView
            android:layout_marginStart="8dp"
            android:layout_marginEnd="15dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Application Done Date :"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAllCaps="true"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/dark_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <TextView
            android:editable="false"
            android:singleLine="true"
            android:background="@android:color/transparent"
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:padding="15dp"
            android:textColorHint="#eae9e9"
            android:hint="Enter Application Due Date"
            android:textColor="#fff"
            />


    </LinearLayout>




    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_marginStart="15dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/cars"
            />


        <TextView
            android:layout_marginStart="8dp"
            android:layout_marginEnd="15dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Car details :"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAllCaps="true"
            />

    </LinearLayout>



        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/dark_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:layout_margin="5dp"
                android:textColor="#fff"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Licence Plate No  :"/>



            <LinearLayout
                android:layout_margin="5dp"
                android:background="@drawable/sliver_app_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <EditText
                    android:singleLine="true"
                    android:background="@android:color/transparent"
                    android:id="@+id/plate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:padding="15dp"
                    android:textColorHint="#eae9e9"
                    android:hint="eg 62-255-69"
                    android:textColor="#fff"
                    />


            </LinearLayout>




        </LinearLayout>




        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:layout_margin="5dp"
                android:textColor="#fff"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Model  :"/>



            <LinearLayout
                android:layout_margin="5dp"
                android:background="@drawable/sliver_app_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <EditText
                    android:singleLine="true"
                    android:background="@android:color/transparent"
                    android:id="@+id/model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:padding="15dp"
                    android:textColorHint="#eae9e9"
                    android:hint="eg Mercedes Benz"
                    android:textColor="#fff"
                    />


            </LinearLayout>







        </LinearLayout>





        </LinearLayout>





            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:paddingEnd="0dp"
                        android:paddingStart="5dp"
                        android:layout_margin="5dp"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Year  :"/>



                    <LinearLayout
                        android:layout_margin="5dp"
                        android:background="@drawable/sliver_app_light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">



                        <EditText
                            android:singleLine="true"
                            android:background="@android:color/transparent"
                            android:id="@+id/year"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:padding="15dp"
                            android:textColorHint="#eae9e9"
                            android:hint="eg 2017"
                            android:textColor="#fff"
                            />


                    </LinearLayout>




                </LinearLayout>




                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:layout_margin="5dp"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Color  :"/>



                    <LinearLayout
                        android:layout_margin="5dp"
                        android:background="@drawable/sliver_app_light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">



                        <EditText
                            android:singleLine="true"
                            android:background="@android:color/transparent"
                            android:id="@+id/color"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:padding="15dp"
                            android:textColorHint="#eae9e9"
                            android:hint="eg Black"
                            android:textColor="#fff"
                            />


                    </LinearLayout>







                </LinearLayout>





            </LinearLayout>




    </LinearLayout>




        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:layout_marginStart="15dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/coating"
                />


            <TextView
                android:layout_marginStart="8dp"
                android:layout_marginEnd="15dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Coating details :"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textAllCaps="true"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/dark_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




        <LinearLayout
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/black"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:text="PRO9H Black EDITION"
                    android:textAllCaps="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



                <RadioButton
                    android:id="@+id/silver"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:text="PRO9H SILVER TITANIUM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



                <RadioButton
                    android:id="@+id/red"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:text="PRO9H RED ROSE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                </RadioGroup>



            </LinearLayout>




            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">



                <CheckBox
                    android:textColor="#fff"
                    android:layout_gravity="center"
                    android:id="@+id/top"
                    android:text="PRO FEATHER TOP COAT"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />





            </LinearLayout>





        </LinearLayout>






        </LinearLayout>






            <Button
            android:id="@+id/add"
            android:background="@drawable/button_background_red"
            android:text="Add to list"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />






    </LinearLayout>



    </ScrollView>



</LinearLayout>
